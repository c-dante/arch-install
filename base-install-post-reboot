# setup AUR
#install base-devel tools for building aur packages
sudo pacman -Syu --needed base-devel

mkdir scratch
cd scratch/

#install cower
git clone https://aur.archlinux.org/cower.git
cd cower/
vim ~/.gnupg/gpg.conf
# change keyserver to mit key server
gpg --recv-keys 1EB2638FF56C0C53
makepkg -sri
cd ..

#install pacaur
git clone https://aur.archlinux.org/pacaur.git
cd pacaur/
makepkg -sri


# Finish network setup with avahi
pacman -S avahi nss-mdns
sudo vim /etc/avahi/avahi-daemon.conf
# set use-ipv6 to yes
sudo vim /etc/nsswitch.conf
# hosts: files mdns_minimal [NOTFOUND=return] dns myhostname
sudo systemctl enable avahi-daemon.service
sudo systemctl start avahi-daemon.service

# Finish INTEL MICROCODE Install the AUR package `systemd-boot-pacman-hook`
pacaur -Syu systemd-boot-pacman-hook

# create user
useradd -m -G wheel -s /bin/bash username

EDITOR=vim visudo
# uncomment the line for %wheel

# logout and back in as a normal user

#disable root login
sudo passwd root -l

pacaur -S openssh
vim /etc/ssh/sshd_config
# PermitRootLogin no
sudo systemctl enable sshd.socket
